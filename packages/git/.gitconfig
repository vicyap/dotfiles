[user]
    name = Victor Yap
    email = vicyap@users.noreply.github.com

[init]
    defaultBranch = main

[core]
    editor = vim
    autocrlf = input
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    line-numbers = true

[pull]
    ff = only

[push]
    default = current
    autoSetupRemote = true

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate
    last = log -1 HEAD
    unstage = reset HEAD --
    initer = "!f() { git init && git commit --allow-empty --allow-empty-message --message ''; }; f"

[color]
    ui = auto

[credential "https://github.com"]
    helper =
    helper = !gh auth git-credential

[credential "https://gist.github.com"]
    helper =
    helper = !gh auth git-credential
