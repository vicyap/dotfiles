# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

# order += "ipv6"
order += "spotify"
# order += "net_rate"
# order += "disk /"
# order += "run_watch DHCP"
# order += "run_watch VPN"
# order += "wireless _first_"
order += "wifi"
order += "ethernet _first_"
# order += "load"
order += "battery_level"
order += "volume_status master"
order += "backlight"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

wifi {
	bitrate_bad = 0
	bitrate_degraded = 1
	cache_timeout = 1
	round_bitrate = False
	format_up = "W: ({signal_percent} at {ssid}) {bitrate} {ip}"
	format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

net_rate {
	precision = 0
	format = "(D:{down}) (U:{up})"
}

battery_level {
	hide_seconds = True
	measurement_mode = "acpi"
        format = "battery: {percent}% {time_remaining}"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = "%B %d, %Y %H:%M:%S"
}

cpu_usage {
	format = "usage: %usage"
}

sysdata {
	cache_timeout = 2
	high_threshold = 75
	med_threshold = 40
	format = "CPU: {cpu_usage} % RAM: {mem_used} G {mem_used_percent} %"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume_status master {
	command = "pactl"
	cache_timeout = 0.5
	device = 1
        format = "♪: {percentage} %"
        format_muted = "♪: muted {percentage} %"
        threshold_bad = 1
        threshold_degraded = 0
}

backlight {
	cache_timeout = 0.5
	format = "brightness: {level} %"
}

spotify {
	format = "{artist} - {title}"
	format_down = ""
}
