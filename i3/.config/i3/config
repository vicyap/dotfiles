# window colors
#                       border  background text    indicator
client.focused          $base0D $base0D    $base00 $base01
client.focused_inactive $base02 $base02    $base03 $base01
client.unfocused        $base01 $base01    $base03 $base01
client.urgent           $base02 $base08    $base07 $base08

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    ## remember to add your favourite status bar, i.e.,
    status_command py3status
    position top
    tray_output primary
    colors {
        separator  $base04
        background $base01
        statusline $base05
        #                  border  background text
        focused_workspace  $base0C $base0D    $base00
        active_workspace   $base02 $base02    $base07
        inactive_workspace $base01 $base01    $base03
        urgent_workspace   $base08 $base08    $base07
    }
}

# if XF86* keysyms do not work, check "xmodmap -pke" of "xev"

# pulse audio controls
set $audio_delta 5
set $small_audio_delta 1
exec_always --no-startup-id pactl set-default-sink alsa_output.pci-0000_00_1b.0.analog-stereo
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +$audio_delta% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -$audio_delta% #decrease sound volume
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +$small_audio_delta% #increase sound volume
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -$small_audio_delta% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# screen brightness controls
set $brightness_delta 5
set $small_brightness_delta 1
bindsym XF86MonBrightnessUp exec light -p -A $brightness_delta # increase screen brightness
bindsym XF86MonBrightnessDown exec light -p -U $brightness_delta # decrease screen brightness
bindsym Shift+XF86MonBrightnessUp exec light -p -A $small_brightness_delta # increase screen brightness
bindsym Shift+XF86MonBrightnessDown exec light -p -U $small_brightness_delta # decrease screen brightness

# playerctl controls
bindsym $mod+Control+Right exec playerctl next
bindsym $mod+Control+Left exec playerctl previous
bindsym $mod+Control+Up exec playerctl play
bindsym $mod+Control+Down exec playerctl pause

# print screen button
bindsym Print exec gnome-screenshot -w -B -f $(head /dev/urandom | tr -dc A-Za-z0-9 | head -c 4).jpg

# lock
bindsym $mod+shift+x exec i3lock -c 000000

