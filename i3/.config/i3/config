# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

	set $resize_size 4
    set $fine_resize_size 1

        # use vim like bindings
        bindsym h resize shrink width $resize_size px or $resize_size ppt
        bindsym k resize grow height $resize_size px or $resize_size ppt
        bindsym j resize shrink height $resize_size px or $resize_size ppt
        bindsym l resize grow width $resize_size px or $resize_size ppt


        # use shift for finer adjustments
        bindsym Shift+h resize shrink width $fine_resize_size px or $fine_resize_size ppt
        bindsym Shift+k resize grow height $fine_resize_size px or $fine_resize_size ppt
        bindsym Shift+j resize shrink height $fine_resize_size px or $fine_resize_size ppt
        bindsym Shift+l resize grow width $fine_resize_size px or $fine_resize_size ppt

        # same bindings, but for the arrow keys
        bindsym Left  resize shrink width $resize_size px or $resize_size ppt
        bindsym Down  resize grow height $resize_size px or $resize_size ppt
        bindsym Up    resize shrink height $resize_size px or $resize_size ppt
        bindsym Right resize grow width $resize_size px or $resize_size ppt

        # same bindings, but for the arrow keys
        bindsym Shift+Left  resize shrink width $fine_resize_size px or $fine_resize_size ppt
        bindsym Shift+Down  resize grow height $fine_resize_size px or $fine_resize_size ppt
        bindsym Shift+Up    resize shrink height $fine_resize_size px or $fine_resize_size ppt
        bindsym Shift+Right resize grow width $fine_resize_size px or $fine_resize_size ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

